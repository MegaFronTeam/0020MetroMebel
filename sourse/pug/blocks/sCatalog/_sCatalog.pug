mixin sCatalog(card='true')
	// start sCatalog
	+b.sCatalog.section&attributes(attributes)
		+e.container.container
			img(src="img/svg/square.svg" alt='').square
			+e.row.row 
				.col-auto
					+b.filter
						//- +e.filter-btn
						h5.d-none.d-xl-block фильтр по параметрам
						+e.parameters
							+ddGroup()
								+ddGroupItem('Цена')
									+e.slide
										.default-ion-slider
								+ddGroupItem('Длина столешницы')
									+b.form-wrap--2
										.row
											.col-6
												+in-c('radio', '200 мм (10)')
											.col-6
												+in-c('radio', '1000 мм (1)')
											.col-6
												+in-c('radio', '1110 мм (10)')
											.col-6
												+in-c('radio', '1200 мм (10)')
											.col-6
												+in-c('radio', '1400 мм (3)')
											.col-6
												+in-c('radio', '1700 мм (10)')
											.col-6
												+in-c('radio', '2000 мм (5)')
								+ddGroupItem('Высота в мм')
									+e.slide
										.default-ion-slider
								+ddGroupItem('Длина в мм')
									+e.slide
										.default-ion-slider
								+ddGroupItem('Глубина в мм')
									+e.slide
										.default-ion-slider
								+ddGroupItem('По назначению')
									+b.form-wrap
										+in-c('radio', 'для балкона')
										+in-c('radio', 'для цветов')
										+in-c('radio', 'для кладовки')
										+in-c('radio', 'для подвала')
										+in-c('radio', 'для склада')
						+e.btns
							+e.btn(href="#") Показать
							+e.btn--secondary(href="#") Сбросить
						+e.categories
							+ddGroup()
								+ddGroupItem('Категории')
									mixin item(i)
										+e.wrap
											+e.header
												+e.img-wrap
													.img-wrap-center
														+img(`img/category-img-${i}.png`)
												+e.title Металлические стеллажи
											+e.body
												ul
													li 
														a(href="#") Архивные стеллажи
													li 
														a(href="#") Стеллажи усиленные
													li 
														a(href="#") Паллетные стеллажи
													li 
														a(href="#") Полочные стеллажи
													li 
														a(href="#") Консольные стеллажи
													li 
														a(href="#") Мобильные стеллажи
													li 
														a(href="#") Грузовые стеллажи
													li 
														a(href="#") Стеллажи универсальные
													li 
														a(href="#") Стеллажи из нержавеющей стали
													li 
														a(href="#") Оцинкованные стеллажи
													li 
														a(href="#") Складские стеллажи
													li 
														a(href="#") Офисные стеллажи
													li 
														a(href="#") Стеллажи для дома
													li 
														a(href="#") Для гаража
													li 
														a(href="#") Для балконов
													li 
														a(href="#") Для колес
													li 
														a(href="#") Для одежды
													li 
														a(href="#") Для бутылей
													li 
														a(href="#") Для инструментов
													li 
														a(href="#") С перфорированными полками
													li 
														a(href="#") Сборные разборные серии СТ
													li 
														a(href="#") Серия СТП
													li 
														a(href="#") Серия СКУ
													li 
														a(href="#") Серия МКФ
									-for(let i = 1; i <= 10; i++)
										+item(i)
						+e.news.d-none.d-xl-block
							+ddGroup()
								+ddGroupItem('Свежие новости')
									+e.news-item
										+e.news-title “Расширение ассортиметра”
										p В нашем ассортименте появились гидравлические штабелёры
										+e.news-date 31 августа 2022
									+e.news-item
										+e.news-title “Поздравляем с майскими праздниками”
										p График работы нашей компании в майские праздники
										+e.news-date 28 апреля 2022
				.col
					+e.other-products
						mixin other-product(i, title)
							+e.other-product(href='#')
								+e.img-wrap
									.img-wrap-center 
										+img(`img/product-img-${i}.png`)
								+e.product-title!= title
								+e.product-desc Нагрузка - 300 кг
						+other-product(1, 'Слесарные верстаки&nbsp;ВЛ-К')
						+other-product(2, 'Верстаки ВЛ')
						+other-product(3, 'Верстаки ВС')
						+other-product(4, 'Столярные верстаки')
						+other-product(5, 'Верстаки Эксперт и Мастер')
						+other-product(6, 'Верстаки PM')
					+e.show-more(href="#")
						| Смотреть все
						+icon('arrow-right')
					+e.radio-btns
						mixin radio-btn(text)
							+e.LABEL.radio-btn
								input(type="radio" name="radio-btn")
								span!= text
						+radio-btn('Однотумбовые')
						+radio-btn('Двухтумбовые')
						+radio-btn('Бестумбовые')
						+radio-btn('Мобильные')
						+radio-btn('1 000 мм')
						+radio-btn('1 500 мм')
						+radio-btn('2 000 мм')
					+e.sort
						+e.sort-title Сортировать по:
						+input('По названию', 'select')
						+input('Цене', 'select')
						+input('Популярности', 'select')
						+e.sort-link(href="#").d-none.d-md-block Новинки
						+e.control-row.row
							.col-auto.d-xl-none
								+e.cotrol-btn--js(href='#')
									+img('img/filter.png')
							.col-auto.d-none.d-lg-block
								+e.cotrol-btn(href='#')
									+img('img/control-1.png')
							.col-auto.d-none.d-lg-block
								+e.cotrol-btn(href='#')
									+img('img/control-2.png')
					if card 
						+e.catalog-row.row
							-for(let i = 1; i <= 8; i++)
								.col-md-6.col-xl-4.col-xxl-3.zIndex
									+card('true')
					else
						+e.catalog-row--2.row
							-for(let i = 1; i <= 4; i++)
								.col-12
									+oneInRowcard('true')
			+e.catalog-bottom
				+pugin()
				+e.text Стеллажи с&nbsp;нагрузкой до&nbsp;120&nbsp;кг недорого от&nbsp;официального дилера. Доступная цена без дилерской наценки. В&nbsp;каталоге более 9&nbsp;моделей в&nbsp;наличии или под заказ. Вы можете купить, уточнить цену, получить информацию, оставив заявку или позвонить по&nbsp;телефону: + 7 (495) 172-21-96. Железная мебель в&nbsp;интернет-магазине “МетПромМебель.” Доставка по&nbsp;Москве и&nbsp;в&nbsp;другие города и&nbsp;регионы России.
	// end sCatalog