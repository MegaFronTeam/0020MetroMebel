mixin sPopular(def)
	// start sPopular
	+b.sPopular.section#sPopular&attributes(attributes)
		+e.container.container-fluid.container-lg
			block
			+headline('Популярные категории', 'true')
			mixin item(i, title, text)
				+e.slide.swiper-slide
					+e.item(href='#')
						+e.content
							+e.title!= title
							p!= text
							+icon('arrow-right')
						+e.img-wrap
							+img(`img/sPopular-img-${i}.png`)
			if def
				+e.def-slider-wrap.default-slider-wrap
					+e.def-slider.default-slider
						.swiper-wrapper
							+item(1, 'Шкафы металлические', 'Сушильные шкафы<br>Для обуви шкафы<br>Для раздевалок шкафы<br>Для одежды шкафы<br>Для инструментов шкафы<br>Медицинские шкафы')
