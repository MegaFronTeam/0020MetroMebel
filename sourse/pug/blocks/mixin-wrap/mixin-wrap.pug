mixin chooseColor(notDef)
	+b.choose-color
		if notDef
			block
		else
			- for(let i = 0; i < 100; i++)
				+in-c('radio', '', 'color')
					+e.color(style='--bgColor: #D0BF8D;')
				+in-c('radio', '', 'color')
					+e.color(style='--bgColor: #D8B68B;')
				+in-c('radio', '', 'color')
					+e.color(style='--bgColor: #DBB173;')
				+in-c('radio', '', 'color')
					+e.color(style='--bgColor: #D99705;')

mixin upload-field()
	+b.upload-field
