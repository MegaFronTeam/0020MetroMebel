mixin addblock()
	+b.addBlock
		+e.btn--plus(type="button")
		input(type="text" value="1")
		+e.btn--minus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin headline(text, all, innertext, plus=true)
	+b.headline
		+e.title
			if plus
				+e.plus
			.h4!= text 
				span!= innertext
		if all
			+e.showmore(href="#")
				| весь каталог
				+icon('arrow-right')

mixin card(label, count=3)
	+b.card
		+e.aside--left
		+e.aside--right
			+e.links
				+e.link(href="#")
					+icon('like')
				+e.link(href="#")
					+icon('diagram')
				+e.link(href="#")
					+icon('cart')
		+e.content
			if label
				+e.label(style="--bg: #6ab40b") -35%
				+e.label--right(style="--bg: #fb4420") NEW
			+e.img-slider--js
				.swiper-wrapper
					-for(i = 0; i < count; i++)
						+e.slide.swiper-slide
							+e.img-wrap
								.img-wrap-center
									+img('img/wardrobe.png')
						+e.slide.swiper-slide
							+e.img-wrap
								.img-wrap-center
									+img('https://metprommebel.ru/upload/medialibrary/326/326ef3efb17ba2d70fa3d40c9d1fd15d.jpg')
				.swiper-pagination
			+e.title Цветной четырехсекционный шкаф для одежды
			+img('img/stars.png').stars
			ul
				mixin li(title, text)
					li
						span!= title
						span.doted
						span!= text
				+li('Высота', '1860мм')
				+li('Ширина', '600мм')
				+li('Глубина', '500мм')
				+li('Цвет', 'Серый')
			+e.price 8 000 руб.
			+e.footer
				+e.btn.btn.btn-secondary Заказать
				+addblock
		+e.bottom-card
				+e.buy
					a(href="#") Купить в 1 клик
					p Есть в наличии
				+e.articul #[span Артикул: ] 23388, 23389

