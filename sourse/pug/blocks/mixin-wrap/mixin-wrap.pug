						+img('img/wallet.png')
						p Возможность отсрочки платежа

mixin oneInRowcard(title, articul, ...imgs)
	+b.card--oneinrow
		+e.row.row
			+e.left-side-col.col
				+e.label--right(style="--bg: #fb4420") NEW
				+e.links
					+e.link(href="#")
						+icon('like')
					+e.link(href="#")
						+icon('diagram')
					+e.link(href="#")
						+icon('cart')
				+e.img-slider--js
					.swiper-wrapper
						each img in imgs
							+e.slide.swiper-slide
								+e.img-wrap
									.img-wrap-center
										+img(img)
					.swiper-pagination
			.col
				+e.title!= title
				+e.inner-row.row
					.col
						+img('img/stars.png').stars
						+e.full-price
							+e.price 33 037 руб.
							+e.old-price 34 000 руб.
						+e.footer
							+e.btn.btn.btn-secondary(href="#") Заказать
							+addblock
						+e.buy
							a(href="#") Купить в 1 клик
							p Есть в наличии
					.col.d-none.d-xl-block
						ul
							block
							//- +li('Высота', '1860мм')
							//- +li('Ширина', '600мм')
							//- +li('Глубина', '500мм')
							//- +li('Цвет', 'Серый')
						+e.articul #[span Артикул: ]<br> 
							!= articul
			.col-12.d-flex.d-xl-none
				+e.footer-wrap 
					ul
						block
						//- +li('Высота', '1860мм')
						//- +li('Ширина', '600мм')
						//- +li('Глубина', '500мм')
						//- +li('Цвет', 'Серый')
					+e.articul #[span Артикул: ]<br> 
						!= articul

mixin scrollTop()
