mixin addblock()
	+b.addBlock
		+e.btn--plus(type="button")
		input(type="text" value="1")
		+e.btn--minus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

//- +breadcrumb('Главная',...items)

mixin page-head(t)
	+b.page-title-wrapper
		- let l = items.length
		.container
			if t
				h1= t
			else 
				block

mixin headline(text, all, innertext, plus=true)
	+b.headline
		+e.title
			if plus
				+e.plus
			.h4!= text 
				span!= innertext
		if all
			+e.showmore(href="#")
				| весь каталог
				+icon('arrow-right')

mixin cardList(listTitle, listText)
	li
		span.wrap-left
			span.text!= listTitle
			//- span.doted
		span.wrap-right
			span.text!= listText

mixin card(label, title='Цветной четырехсекционный шкаф для одежды', articul='23388, 23389', ...imgs)
	+b.card
		//- +e.aside--left
		//- +e.aside--right
		+e.links
			+e.link&attributes(attributes)(href="#")
				+icon('like')
			+e.link&attributes(attributes)(href="#")
				+icon('diagram')
			+e.link&attributes(attributes)(href="#")
				+icon('cart')
		+e.content
			if label
				+e.label(style="--bg: #6ab40b") -35%
				+e.label--right(style="--bg: #fb4420") NEW
			a(href="#") 
				+e.img-slider--js
					.swiper-wrapper
						each img in imgs
							+e.slide.swiper-slide
								+e.img-wrap
									.img-wrap-center
										+img(img)
					.swiper-pagination
			+e.title(href='#')!= title 
			+img('img/stars.png').stars
			ul 
				block
			+e.price 8 000 руб.
			+e.footer
				+e.btn.btn.btn-secondary(href="#") Заказать
				+addblock
		+e.bottom-card
				+e.buy
					a(href="#") Купить в 1 клик
					p Есть в наличии
				+e.articul 
					span Артикул: 
					!= articul

