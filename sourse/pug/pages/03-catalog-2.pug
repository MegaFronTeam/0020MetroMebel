extends ../layout/main.pug

include ../blocks/header/_header.pug
include ../blocks/topLine/_topLine.pug
include ../blocks/top-nav/_top-nav.pug 
include ../blocks/headerBlock/_headerBlock.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sContent/_sContent.pug
 
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sCatalog/_sCatalog.pug
include ../blocks/footer/_footer.pug

include ../blocks/sPopular/_sPopular.pug
include ../blocks/sProdCard/_sProdCard.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sSlider/_sSlider.pug
include ../blocks/sMetalFurniture/_sMetalFurniture.pug
include ../blocks/sCatalog/_sCatalog.pug

block variables
	- let  mainPage= 'catalog-page' 
	- let  bg= null

block title
	- let  title= 'Каталог'
	title= title
block pagecontent
	+mob-mnu()
	
	
	+header()
		.container-fluid
			.header__inner
				+topLine
				+top-nav()
	main
		+page-head('Столярные и слесарные верстаки', 'Каталог', 'Верстаки', 'Столярные и слесарные верстаки')
		+sCatalog(false)
		+sMetalFurniture
		+sSlider('', 'С этими товарами покупают', '', 'true')
			img(src="img/svg/square.svg" alt='').square.square--1
			img(src="img/svg/square.svg" alt='').square.square--2
		+sSlider('', 'Стоит посмотреть', '', 'true')
			img(src="img/svg/square.svg" alt='').square.square--3
			img(src="img/svg/square.svg" alt='').square.square--4
		+advatages()
	+footer()